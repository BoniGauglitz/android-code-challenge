<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_Job_Content_Row"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="8dp"
        android:background="@drawable/green_stroke">

        <TextView
            android:id="@+id/txv_Job_Title_Row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Assistente de logística em terceirizada."
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="35dp"/>

        <TextView
            android:id="@+id/txv_Job_Address_Row"
            app:layout_constraintLeft_toLeftOf="@id/txv_Job_Title_Row"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Vila Mariana, São Paulo - SP"
            app:layout_constraintTop_toBottomOf="@id/txv_Job_Title_Row"/>

    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/imgv_Job_Type_row"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="@id/cl_Job_Content_Row"/>

</android.support.constraint.ConstraintLayout>